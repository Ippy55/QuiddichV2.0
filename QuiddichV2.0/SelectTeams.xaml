<Page x:Class="QuiddichV2._0.SelectTeams"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
	Title="SelectTeams">

    <Grid>
        <Label x:Name="lblTeam1" Content="Team 1:" HorizontalAlignment="Left" Margin="128,98,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTeam2" Content="Team 2:" HorizontalAlignment="Left" Margin="128,225,0,0" VerticalAlignment="Top"/>

        <ComboBox x:Name="cboTeam1" HorizontalAlignment="Left" Margin="57,119,0,0" VerticalAlignment="Top" Width="193"/>
        <ComboBox x:Name="cboTeam2" HorizontalAlignment="Left" Margin="57,246,0,0" VerticalAlignment="Top" Width="193"/>

        <Button x:Name="btnStartGame" Content="Start Game!" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Width="268" Height="45" Click="btnStartGame_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,385,0,0" VerticalAlignment="Top" Width="268" Height="45" Click="btnCancel_Click"/>

    </Grid>
</Page>
